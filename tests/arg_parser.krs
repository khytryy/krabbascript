from <stdlib.krs> import std;

# Prints usage
function printUsage(array<str>: args) {
    std.print("Usage: {args[0]} [options]");
    std.print("version          Display app's version");
    std.print("krabba           Print a nieche krabba");
}

function main(array<str>: args) -> i32 {
    if (args.size < 2) {
        printUsage();
    }

    if (args[1] == "version") {
        std.print("1.0.0");
    }
    elif (args[1] == "krabba") {
        std.print("Krabba!");
    }
    else {
        std.print("Unknown command \"{args[1]}\"");
        return 1;
    }

    return 0;
}